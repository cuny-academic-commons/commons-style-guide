<div class="directory-filter directory-filter-type-dropdown">
	<div class="directory-filter-dropdown" id="directory-filter-{{ objectType }}" role="tablist">
		<h3 class="directory-filter-dropdown-title">
			<button class="directory-filter-dropdown-button" id="directory-filter-{{ objectType }}-button" aria-controls="directory-filter-{{ objectType }}-options" aria-expanded="false" role="tab" aria-selected="false" type="button">{{ buttonText }}</button>

			<div class="directory-filter-options" id="directory-filter-{{ objectType }}-options" aria-labelledby="directory-filter-{{ objectType }}-button" role="tabpanel" aria-hidden="true">
				<div class="directory-filter-options-close mobile-only">
					<button aria-label="Close" id="directory-filter-campus-option-close" type="button"><span class="dashicons dashicons-no-alt"></span></button>
				</div>

				<div class="directory-filter-options-title mobile-only">{{ mobileTitle }}</div>

				<div class="directory-filter-options-scrollable">

				<ul>
					{{#each dropdownOptions}}
						<li>
							<input class="directory-filter-input" name="filters[campus][]" type="checkbox" value="{{ value }}" id="directory-filter-campus-option-{{ value }}"> <label for="directory-filter-campus-option-{{ value }}">{{ name }}</label>
						</li>
					{{/each}}
				</ul>
			</div>
		</h3>
	</div>
</div>
